@model IEnumerable<Web.Areas.Admin.Models.Dtos.ApplicationRoleDTO>

<style>
    .text-right {
        text-align: right !important;
    }
</style>
<div class="row">
    <div class="col-6">
        <h1 class="text-primary">Roles List</h1>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Role</a>
    </div>
</div>


<table class="table" id="tblRole">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.NormalizedName)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>                
                <th>
                    @Html.DisplayFor(modelItem => item.Name)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.NormalizedName)
                </td>
                
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new {  id=item.CountryId })*@
                    <a href="/Admin/Role/Upsert/@item.Id" class="btn  btn-success text-white" style="cursor:pointer;">
                        <i class="fas fa-edit"></i> &nbsp; Edit
                    </a>
                    <a class="btn btn-danger text-white" style="cursor:pointer;">
                        <i class="fas fa-trash-alt"></i> &nbsp; Delete
                    </a>
                    @*@Html.ActionLink("Delete", "Delete", new {  id=item.CountryId  })*@
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts {

<script type="text/javascript">
    $(document).ready(function(){
        $("#tblRole").DataTable();
    });
</script>
}


