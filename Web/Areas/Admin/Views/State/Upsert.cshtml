@model Web.Areas.Admin.Models.Dtos.StateCrudDTO
@{
    Layout = "_AdminLayout";
    var title = "Create State";
}

<form method="post" >
      <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row p-3 border">
        @if (Model.StateId != 0)
        {
            title = "Edit State";
                        <input type="hidden" asp-for="StateId" />
        }

        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="StateName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StateName" class="form-control" />
                    <span asp-validation-for="StateName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="StateDescription"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StateDescription" class="form-control" />
                    <span asp-validation-for="StateDescription" class="text-danger"></span>
                </div>
            </div>
              <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="CountryId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(x=>x.CountryId,Model.Countries,"Select  Country",new {@class="form-control"})
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-8 offset-4">
                    @if (Model.StateId != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="@Model.StateId" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}